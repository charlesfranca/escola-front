                    events: { //Funcoes que escutam os eventos do player
                        "onLoad": function(){}, //Sendo que eventListener deve ser uma função já presente na página
                        "onStart": function(){},
                        "onFinish": function(){}
                    }
                });
            </script>

            <div class="text-right" style="position: relative">
              <br>
