                    ph: "3b8e50510d562d8d8b101c66f59bf625",//Player Hash do projeto
                    m: "575c49cfcae0d35fde52157de6f2cc61",//MidiaID
                    playerParams: { //Veja a lista de Parâmetros suportados
                        enableShare: true,
                        wideScreen: true
