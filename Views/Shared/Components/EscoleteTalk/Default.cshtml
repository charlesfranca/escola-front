@model List<EscolaDeVoce.Services.ViewModel.EscoleteTalkViewModel>

<section id="papo-de-escolete">

    <div class="container">
        <h5>Papo de Escolete</h5>
        <p>
            Essa é a nossa rede! As conversas sobre a essência, o DNA da Escola de Você, estão aqui. A gente espera você.
        </p>
        <br>
        <br>
    </div>

    <div class="container">
        <div class="papo">

            @foreach(EscolaDeVoce.Services.ViewModel.EscoleteTalkViewModel est in Model){
                <div class="papo-item">
                
                    <div class="papo-item-left">
                        <div class="papo-autor-photo">
                            <img src="~/images/phot-papo.png" alt="">
                        </div>
                        <div class="papo-autor-info">
                            <p>Raquel Vieira</p>
                            <p>São Paulo/SP</p>
                        </div>
                    </div>

                    <div class="papo-item-right">
                        <div class="texto">
                            <h2 class="sub-title">@est.title</h2>
                            <p class="short-desc">
                                @Html.Raw(est.message);
                            </p>
                        </div>

                        <p class="text-right">
                            <a href="/papodeescolete/detalhe/@est.Id" class="escola-btn escola-btn-primary">Entrar no papo</a>
                        </p>
                    </div>

                </div>
            }


        </div>
    </div>
</section>